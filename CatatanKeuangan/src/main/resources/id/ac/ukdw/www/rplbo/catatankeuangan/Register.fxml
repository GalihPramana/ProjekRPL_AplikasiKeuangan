<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="1024" prefWidth="576" style="-fx-background-color: #8e44ad;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="id.ac.ukdw.www.rplbo.catatankeuangan.RegisterController">

    <center>
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets bottom="30" left="50" right="50" top="30" />
            </padding>

            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;" text="Daftar Akun" />


            <TextField fx:id="usernameField" maxWidth="300" promptText="Username" style="-fx-background-color: #ffffff; -fx-border-color: #8e44ad; -fx-text-fill: #333333;" />
            <PasswordField fx:id="passwordField" maxWidth="300" promptText="Password" style="-fx-background-color: #ffffff; -fx-border-color: #8e44ad; -fx-text-fill: #333333;" />
            <PasswordField fx:id="confirmPasswordField" maxWidth="300" promptText="Konfirmasi Password" style="-fx-background-color: #ffffff; -fx-border-color: #8e44ad; -fx-text-fill: #333333;" />


            <Button fx:id="registerButton" maxWidth="300" onAction="#handleRegister" style="-fx-background-color: #e0d9f5; -fx-text-fill: #8e44ad; -fx-font-weight: bold;" text="Daftar">
            <VBox.margin>
               <Insets top="50.0" />
            </VBox.margin></Button>


            <Button fx:id="registerButton1" maxWidth="300" onAction="#handleBack" style="-fx-background-color: #e0d9f5; -fx-text-fill: #8e44ad; -fx-font-weight: bold;" text="Kembali ke Login" />

            <Label fx:id="messageLabel" style="-fx-font-size: 14px; -fx-text-fill: #e74c3c;" />
        </VBox>
    </center>

</BorderPane>
