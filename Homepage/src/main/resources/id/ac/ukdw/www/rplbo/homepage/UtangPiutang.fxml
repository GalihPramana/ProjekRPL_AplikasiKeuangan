<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600" prefWidth="800" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="UtangPiutang.UtangPiutangController">

    <left>
        <VBox alignment="TOP_CENTER" prefWidth="150" spacing="20" style="-fx-background-color: #000000;">
            <Label style="-fx-padding: 20 0 0 0;" text="ğŸ  Home" textFill="white" />
            <Label text="ğŸ” Transaction" textFill="white" />
            <Label text="âš– Debt" textFill="white" />
            <Label style="-fx-padding: 300 0 0 0;" text="ğŸ”’ Logout" textFill="white" />
        </VBox>
    </left>

    <center>
        <!--
        masalah disini
         <VBox spacing="10" alignment="TOP_CENTER" padding="20">
         dibagian padding="20"
         sudah diperbaiki, tambahkan padding menggunakan

                <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>

         jangan langsung padding = "20"
  -->
        <VBox alignment="TOP_CENTER" spacing="10">
            <Label style="-fx-font-size: 20px;" text="Form Utang Piutang" />

            <HBox spacing="10">
                <VBox spacing="5">
                    <Label text="Jumlah Utang:" />
                    <TextField fx:id="tfJumlahUtang" />
                </VBox>
                <VBox spacing="5">
                    <Label text="Sisa Utang:" />
                    <TextField fx:id="tfSisaUtang" />
                </VBox>
                <VBox spacing="5">
                    <Label text="Sudah Dibayar:" />
                    <TextField fx:id="tfSudahDibayar" />
                </VBox>
            </HBox>

            <HBox spacing="10">
                <Button onAction="#handleTambah" text="Tambah" />
                <Button onAction="#handleHapus" text="Hapus" />
                <TextField fx:id="tfFilter" promptText="Filter..." />
                <Button onAction="#handleFilter" text="Cari" />
            </HBox>

            <TableView fx:id="table" prefHeight="300">
                <columns>
                    <TableColumn fx:id="colJumlah" text="Jumlah Utang" />
                    <TableColumn fx:id="colSisa" text="Sisa Utang" />
                    <TableColumn fx:id="colBayar" text="Sudah Dibayar" />
                </columns>
            </TableView>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
        </VBox>
    </center>
</BorderPane>
