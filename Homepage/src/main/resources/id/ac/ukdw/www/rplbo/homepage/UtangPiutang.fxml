<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UtangPiutang.UtangPiutangController">

    <left>
        <VBox alignment="TOP_CENTER" prefWidth="150" spacing="20" style="-fx-background-color: #000000;">
            <Label style="-fx-padding: 20 0 0 0;" text="ðŸ  Home" textFill="white" />
            <Label text="ðŸ” Transaksi" textFill="white" />
            <Label text="âš– Utang Piutang" textFill="white" />
            <Label style="-fx-padding: 300 0 0 0;" text="ðŸ”’ Logout" textFill="white" />
        </VBox>
    </left>

    <center>
        <VBox alignment="TOP_CENTER" spacing="10">
            <Label style="-fx-font-size: 20px;" text="Form Utang Piutang" />

            <HBox spacing="10">
                <VBox spacing="5">
                    <Label text="Nama Penghutang:" />
                    <TextField fx:id="tfNama" />
                </VBox>
                <VBox spacing="5">
                    <Label text="Tanggal:" />
                    <TextField fx:id="tfTanggal" promptText="YYYY-MM-DD" />
                </VBox>
                <VBox spacing="5">
                    <Label text="Lunas:" />
                    <CheckBox fx:id="cbLunas" />
                </VBox>
            </HBox>

            <HBox spacing="10">
                <VBox spacing="5">
                    <Label text="Jumlah Utang:" />
                    <TextField fx:id="tfJumlahUtang" />
                </VBox>
                <VBox spacing="5">
                    <Label text="Sudah Dibayar:" />
                    <TextField fx:id="tfSudahDibayar" />
                </VBox>
            </HBox>

            <HBox spacing="10">
                <Button onAction="#handleTambah" text="Tambah" />
                <Button onAction="#handleHapus" text="Hapus" />
                <TextField fx:id="tfFilter" promptText="Filter..." />
                <Button onAction="#handleFilter" text="Cari" />
            </HBox>

            <TableView fx:id="table" prefHeight="300">
                <columns>
                    <TableColumn fx:id="colNama" text="Nama" />
                    <TableColumn fx:id="colTanggal" text="Tanggal" />
                    <TableColumn fx:id="colJumlah" text="Jumlah Utang" />
                    <TableColumn fx:id="colBayar" text="Sudah Dibayar" />
                    <TableColumn fx:id="colSisa" text="Sisa Utang" />
                    <TableColumn fx:id="colLunas" text="Lunas" />
                </columns>
            </TableView>

            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
        </VBox>
    </center>
</BorderPane>
