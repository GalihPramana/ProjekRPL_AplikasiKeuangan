<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.6" xmlns:fx="http://javafx.com/fxml/1" fx:controller="id.ac.ukdw.www.rplbo.homepage.TransactionController">
   <children>
      <GridPane layoutX="20.0" layoutY="20.0" hgap="10" vgap="15" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10" AnchorPane.bottomAnchor="10">
         <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
         </padding>

         <!-- Judul Form -->
         <Label text="Form Transaksi" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2">
            <font>
               <Font size="24"/>
            </font>
         </Label>

         <!-- Label dan TextField ID Transaksi -->
         <Label text="ID Transaksi:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
         <TextField fx:id="idTransaksiField" promptText="Masukkan ID Transaksi" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

         <!-- Label dan TextField Tanggal -->
         <Label text="Tanggal:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
         <TextField fx:id="tanggalField" promptText="YYYY-MM-DD" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

         <!-- Label dan TextField Jumlah -->
         <Label text="Jumlah:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
         <TextField fx:id="jumlahField" promptText="Masukkan jumlah" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

         <!-- Tombol CRUD -->
         <GridPane hgap="10" GridPane.columnIndex="1" GridPane.rowIndex="4">
            <children>
               <Button text="Tambah" fx:id="addButton" maxWidth="Infinity" GridPane.columnIndex="0"/>
               <Button text="Update" fx:id="updateButton" maxWidth="Infinity" GridPane.columnIndex="1"/>
               <Button text="Hapus" fx:id="deleteButton" maxWidth="Infinity" GridPane.columnIndex="2"/>
               <Button text="Bersihkan" fx:id="clearButton" maxWidth="Infinity" GridPane.columnIndex="3"/>
            </children>
         </GridPane>

         <!-- TableView untuk menampilkan data transaksi -->
         <TableView fx:id="tableView" GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.columnSpan="2" prefHeight="350" prefWidth="560">
            <columns>
               <TableColumn fx:id="idColumn" text="ID Transaksi" prefWidth="180"/>
               <TableColumn fx:id="tanggalColumn" text="Tanggal" prefWidth="190"/>
               <TableColumn fx:id="jumlahColumn" text="Jumlah" prefWidth="190"/>
            </columns>
         </TableView>

      </GridPane>
   </children>
</AnchorPane>
