<AnchorPane prefHeight="418.0" prefWidth="784.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="id.ac.ukdw.www.rplbo.homepage.TransactionController">
   <children>
      <HBox prefHeight="540.0" prefWidth="784.0">
         <children>
      
                  <VBox alignment="TOP_CENTER" prefHeight="467.0" prefWidth="130.0" spacing="20" style="-fx-background-color: #000000;">
                  <Label style="-fx-padding: 20 0 0 0;" text="🏠 Home" textFill="white" />
                  <Label text="🔁 Transaction" textFill="white" />
                  <Label text="⚖ Debt" textFill="white" />
                  <Label style="-fx-padding: 300 0 0 0;" text="🔒 Logout" textFill="white" />
               <HBox.margin>
                  <Insets right="15.0" />
               </HBox.margin>
               </VBox>
      
                  <GridPane hgap="10" prefHeight="570.0" prefWidth="570.0" vgap="10">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
