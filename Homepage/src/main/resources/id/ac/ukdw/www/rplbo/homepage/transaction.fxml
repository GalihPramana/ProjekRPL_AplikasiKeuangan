                     <!-- Label dan TextField untuk ID Transaksi -->
               <Label text="ID Transaksi:" GridPane.rowIndex="0" />
               <TextField fx:id="idTransaksiField" prefHeight="63.0" prefWidth="303.0" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="0" />
      
                     <!-- Label dan TextField untuk Source Name -->
               <Label text="Kategori Transaksi:" GridPane.rowIndex="1" />
               <TextField fx:id="sourceNameField" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="1" />
      
                     <!-- Label dan TextField untuk Jumlah -->
               <Label text="Nominal (IDR):" GridPane.rowIndex="2" />
               <TextField fx:id="jumlahField" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="2" />
      
                     <!-- Label dan TextField untuk Description -->
               <Label text="Deskripsi:" GridPane.rowIndex="3" />
               <TextField fx:id="descriptionField" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="3" />
      
                     <!-- Label dan TextField untuk Tanggal -->
               <Label text="Tanggal (YYYY-MM-DD):" GridPane.rowIndex="4" />
               <TextField fx:id="tanggalField" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="4" />
      
                     <!-- Tombol Delete -->
               <Button fx:id="deleteButton" maxWidth="Infinity" text="Delete" GridPane.columnIndex="1" GridPane.rowIndex="5" />
      
                     <!-- Tombol Clear -->
               <Button fx:id="clearButton" maxWidth="Infinity" text="Clear" GridPane.columnIndex="2" GridPane.rowIndex="5" />
      
                     <!-- TableView untuk menampilkan data transaksi -->
               <TableView fx:id="tableView" prefHeight="214.0" prefWidth="571.0" GridPane.columnSpan="3" GridPane.rowIndex="6">
                  <columns>
                     <TableColumn fx:id="idColumn" prefWidth="35.199949622154236" text="ID" />
                     <TableColumn fx:id="sourceNameColumn" prefWidth="129.60004425048828" text="Kategori" />
                     <TableColumn fx:id="jumlahColumn" prefWidth="132.79998779296875" text="Nominal " />
                     <TableColumn fx:id="descriptionColumn" prefWidth="124.0" text="Deskripsi" />
                     <TableColumn fx:id="tanggalColumn" prefWidth="180.80001831054688" text="Tanggal" />
                  </columns>
               </TableView>
      
                     <!-- Label Total Saldo -->
               <Label fx:id="totalSaldoLabel" style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Total Saldo : ( RP 0 )" GridPane.columnSpan="3" GridPane.rowIndex="7" />
               <HBox alignment="CENTER" prefHeight="35.0" prefWidth="250.0" GridPane.rowIndex="5">
                  <children>
                     <Button fx:id="submitButton" maxWidth="Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="26.0" prefWidth="105.0" text="Pemasukan">
                        <HBox.margin>
                           <Insets right="10.0" />
                        </HBox.margin>
                     </Button>
                     <Button mnemonicParsing="false" prefHeight="26.0" prefWidth="106.0" text="Pengeluaran">
                        <HBox.margin>
                           <Insets left="10.0" />
                        </HBox.margin>
                     </Button>
                  </children>
               </HBox>
            </GridPane>
         </children>
      </HBox>
   </children>
</AnchorPane>
